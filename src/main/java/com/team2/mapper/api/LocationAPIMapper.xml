<mapper namespace="com.team2.mapper.api.LocationAPIMapper">

<select id="getXY" resultType="com.team2.domain.api.LocationDTO" parameterType="com.team2.domain.api.LocationDTO">
	<!-- SELECT * FROM shelter -->
	SELECT x,y,building FROM shelter
	<!--WHERE addr LIKE '%원주시%' -->
</select>


<select id="searchLocationsByKeyword" resultType="com.team2.domain.api.LocationDTO" parameterType="com.team2.domain.api.LocationDTO">
        SELECT x, y FROM shelter
        WHERE addr LIKE CONCAT('%', #{keyword}, '%')
</select>

